@model List<LabUserViewModel>

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-5">
    <h1>รายชื่อผู้ใช้</h1>
    <hr />    
    
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">เพิ่มผู้ใช้ใหม่</h5>
        </div>
        <div class="card-body">
            <form method="post" action="@Url.Action("AddUser", "Account")">
                <div class="row">
                    <div class="col-md-2 mb-3">
                        <label for="UserId" class="form-label">รหัสผู้ใช้</label>
                        <input type="text" class="form-control" id="UserId" name="UserId" required>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="Name" class="form-label">ชื่อ</label>
                        <input type="text" class="form-control" id="Name" name="Name" required>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="LastName" class="form-label">นามสกุล</label>
                        <input type="text" class="form-control" id="LastName" name="LastName" required>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label for="Age" class="form-label">อายุ</label>
                        <input type="number" class="form-control" id="Age" name="Age" min="1">
                    </div>
                    <div class="col-md-2 mb-3">
                        <label for="Address" class="form-label">ที่อยู่</label>
                        <input type="text" class="form-control" id="Address" name="Address">
                    </div>
                </div>
                <button type="submit" class="btn btn-success">เพิ่มผู้ใช้</button>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">ผู้ใช้ทั้งหมด</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>รหัส</th>
                        <th>ชื่อ</th>
                        <th>นามสกุล</th>
                        <th>อายุ</th>
                        <th>ที่อยู่</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.Name</td>
                            <td>@user.LastName</td>
                            <td>@user.Age</td>
                            <td>@user.Address</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (ViewBag.LoginRecords != null && ViewBag.LoginRecords.Count > 0)
    {
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">ประวัติการเข้าสู่ระบบ</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>อีเมล</th>
                            <th>เวลา</th>
                            <th>วันที่</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in ViewBag.LoginRecords)
                        {
                            <tr>
                                <td>@record.Email</td>
                                <td>@record.LoginTime.ToString("HH:mm:ss")</td>
                                <td>@record.LoginTime.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
