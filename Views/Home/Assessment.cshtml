@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Assessment 2</h1>
    <p>Student Information
        <ul>
            <li>Name: @ViewBag.Name</li>
            <li>Classroom Number: @ViewBag.Classroom</li>
            <li>Education Year: @ViewBag.EducationYear</li>
            <li>Favorite Programming Language: @ViewBag.FavLanguage</li>
        </ul>
    </p>

    <div>
    <h1>Grade</h1>
        <p>Your total score is: <strong>@ViewBag.TotalScore</strong></p>
        <p>Your grade is: <strong>@ViewBag.Grade</strong></p>
        <p> @if (ViewBag.Grade == "A")
            {
                <text>Excellent work!</text>
            }
            else if (ViewBag.Grade == "B")
            {
                <text>Good job!</text>
            }
            else if (ViewBag.Grade == "C")
            {
                <text>Fair effort!</text>
            }
            else if (ViewBag.Grade == "D")
            {
                <text>Needs improvement!</text>
            }
            else
            {
                <text>Poor performance, please try harder!</text>
                @foreach (var lowScores in ViewBag.LowScores)
            {
                <div>- @lowScores</div>
            }
            }
            
        </p>
    </div>
    
</div>

