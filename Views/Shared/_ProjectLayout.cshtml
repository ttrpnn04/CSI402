@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] ?? "Gaming Gear Shop")</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    @RenderSection("Styles", required: false)
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
  <div class="container-fluid">

    <!-- Logo -->
    <a class="navbar-brand fw-bold text-info" asp-area="" asp-controller="Project" asp-action="Index">
      ðŸŽ® GearShop
    </a>

    <!-- Toggle Button (Mobile) -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Menu -->
    <div class="collapse navbar-collapse" id="navbarContent">

      <!-- Left Menu -->
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">

        <li class="nav-item">
          <a class="nav-link active" asp-area="" asp-controller="Project" asp-action="Index">Home</a>
        </li>

        <!-- Dropdown -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Products
          </a>

          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Mouse</a></li>
            <li><a class="dropdown-item" href="#">Keyboard</a></li>
            <li><a class="dropdown-item" href="#">Headset</a></li>
            <li><a class="dropdown-item" href="#">Monitor</a></li>
          </ul>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="#">Promotion</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="#">Event</a>
        </li>

      </ul>

      <!-- Search -->
      <form class="d-flex me-3" role="search" asp-controller="Home" asp-action="Search" method="get">
        <input class="form-control form-control-sm me-2" name="q" type="search" placeholder="à¸„à¹‰à¸™à¸«à¸²à¸ªà¸´à¸™à¸„à¹‰à¸²..." aria-label="Search">

        <button class="btn btn-outline-info btn-sm" type="submit">
          Search
        </button>
      </form>

      <!-- Right Menu -->
      <div class="d-flex align-items-center gap-3">

        <!-- Cart -->
        <a href="@Url.Action("Index", "Cart")" class="text-white position-relative">
          <i class="fa-solid fa-cart-shopping fs-5"></i>
          <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">@ViewBag.CartItemCount</span>
        </a>

        <!-- Login -->
        <a class="btn btn-outline-info btn-sm" asp-controller="Account" asp-action="Login">Login</a>

        <!-- Register -->
        <a class="btn btn-info btn-sm" asp-controller="Account" asp-action="Register">Register</a>

      </div>

    </div>
  </div>
</nav>


<div class="container my-4">
    @RenderBody()
</div>

<footer class="text-center py-4">
    <small class="text-muted">Â© @(DateTime.Now.Year) GearShop</small>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)

</body>
</html>
